package br.com.hackprovi.proviHack.dtos;

import java.io.Serializable;
import javax.validation.constraints.Email;
import javax.validation.constraints.NotBlank;
import javax.validation.constraints.Size;
import br.com.hackprovi.proviHack.models.User;
import br.com.hackprovi.proviHack.models.enums.Nivel;

public class UserDto implements Serializable {
    private static final long serialVersionUID = 1L;
    
    private Long id;
    @Size(min = 2, max = 60, message = "Deve conter entre 2 e 60 caracteres.")
    @NotBlank(message = "Campo obrigatório.")
	private String name;
    @Email(message = "Favor inserir um email válido.")
	private String email;
    private Integer nivel;
	
	
	public UserDto() {
		
	}


	public UserDto(Long id, String name, String email,Nivel nivel) {
		super();
		this.id = id;
		this.name = name;
		this.email = email;
		this.nivel = (nivel==null)? null : nivel.getCod();
	}
	
	
	public UserDto(User obj) {
		this.id = obj.getId();
		this.name = obj.getName();
		this.email = obj.getEmail();
		this.nivel = this.nivel = (obj.getNivel()==null)? null : obj.getNivel().getCod();
	}


	public Long getId() {
		return id;
	}


	public void setId(Long id) {
		this.id = id;
	}


	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public String getEmail() {
		return email;
	}


	public void setEmail(String email) {
		this.email = email;
	}


	public Nivel getNivel() {
		return Nivel.toEnum(nivel);
	}


	public void setNivel(Nivel nivel) {
		this.nivel = nivel.getCod();
	}
	
	
	
	
	
	
	
	

}
